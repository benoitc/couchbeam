%%-*- mode: erlang -*-


{erl_opts, [debug_info,
            {platform_define, "^(2[3-9])", 'USE_CRYPTO_MAC'}]}.

{deps, [
    {jsx, "3.1.0"},
    {hackney, "1.25.0"}
]}.


{project_plugins, [{rebar3_ex_doc, "~> 0.2.23"}]}.

{ex_doc, [
    {extras, [
        {"README.md", #{title => "Overview"}},
        {"CHANGELOG.md", #{title => "Changelog"}}
    ]},
    {main, "readme"},
    {homepage_url, "https://github.com/benoitc/couchbeam"},
    {source_url, "https://github.com/benoitc/couchbeam"},
    {source_ref, <<"master">>},
    {output, "doc"},
    {api_reference, true}
]}.

{profiles, [{docs, []},
            {test, [
                    {cover_enabled, true},
                    {eunit_opts, [verbose]},
                    {deps, [{oauth, "2.1.0"}]}
                   ]}
           ]}.
