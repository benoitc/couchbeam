%%-*- mode: erlang -*-

{erl_opts, [debug_info]}.

{deps, [
    {jsx, "2.8.0"},
    {hackney, "v1.10.1"}
]}.


{profiles, [{docs, [
                    {deps, [
                            {edown,
                             {git, "https://github.com/uwiger/edown.git",
                              {tag, "0.7"}}}
                           ]},

                    {edoc_opts, [{doclet, edown_doclet},
                                 {packages, false},
                                 {subpackages, true},
                                 {top_level_readme,
                                  {"./README.md", "http://github.com/benoitc/couchbeam"}}]}
                   ]},
            {test, [
                    {cover_enabled, true},
                    {eunit_opts, [verbose]},

                    {deps, [
                            {oauth,
                             {git, "https://github.com/barrel-db/erlang-oauth.git",
                              {branch, "master"}}}
                           ]}]}


           ]}.
